{
  "name": "turbocache-action",
  "version": "1.1.0",
  "private": true,
  "description": "GitHub Action for Turbocache",
  "main": "lib/main.js",
  "scripts": {
    "build": "yarn tsc",
    "format": "yarn prettier --write .",
    "lint": "yarn eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "yarn jest",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turbocache-build/turbocache-action.git"
  },
  "keywords": [
    "actions",
    "turbo",
    "turbocache",
    "turborepo",
    "node"
  ],
  "author": "Turbocache",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint --fix",
      "yarn prettier --write"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vercel/ncc": "^0.36.1",
    "cross-fetch": "^3.1.5",
    "eslint": "^8.38.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.2.1",
    "prettier": "2.8.7",
    "ts-jest": "^29.1.0",
    "turbo": "^1.9.1",
    "typescript": "^5.0.4"
  }
}
